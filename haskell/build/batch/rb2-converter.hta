<html>
<head>
<title>Onyx RB2 Converter</title>
<hta:application
  applicationname="Onyx RB2 Converter"
  scroll="yes"
  singleinstance="yes"
  windowstate="Normal"
></hta:application>
</head>

<style>
body {
  text-align: center;
}
</style>

<script language="VBScript">
Sub RunProg(prog, arg)
  Set objShell = CreateObject("Wscript.Shell")
  objShell.Run """" & prog & """ """ & arg & """"
End Sub
</script>

<script type="text/javascript">
function RunProgram() {
  document.all.fileForm.reset();
  document.getElementById("file-in").click();
  var prog;
  var radios = document.all['keys-mode'];
  for (var i = 0; i < radios.length; i++) {
    if (radios[i].checked) {
      switch (radios[i].value) {
        case 'no-keys': prog = 'convert-rb2.bat'   ; break;
        case 'keytar' : prog = 'convert-rb2-kg.bat'; break;
        case 'keybass': prog = 'convert-rb2-kb.bat'; break;
      }
    }
  }
  var rb3con = document.getElementById('file-in').value;
  if (rb3con !== '') {
    RunProg(prog, rb3con);
  }
}
</script>

<script language="VBScript">
Sub Window_onLoad
  window.resizeTo 400, 250
End Sub
</script>

<body>

<form>
  <p>
    <label><input type="radio" name="keys-mode" value="no-keys" checked> No Keys</label><br>
    <label><input type="radio" name="keys-mode" value="keytar"> Keys on Guitar</label><br>
    <label><input type="radio" name="keys-mode" value="keybass"> Keys on Bass</label><br>
  </p>
  <p>
    <button type="button" onClick="RunProgram">Convert</button>
  </p>
</form>

<form name="fileForm" style="display: none;">
  <input type="file" id="file-in">
</form>

</body>
</html>
